@model Candidate

<h3 class="display-6">Welcome To Apply</h3>

<form method="post" asp-action="Apply" >
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-floating mb-3">
        <input asp-for="Email" class="form-control" placeholder="name@example.com">
        <label asp-for="Email"></label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="FirstName" class="form-control" placeholder="FirstName">
        <label asp-for="FirstName"></label>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="LastName" class="form-control" placeholder="LastName">
        <label asp-for="LastName"></label>
    </div>

    <div class="form-floating mb-4">
        <select class="form-select" aria-label="Floating label select example">
            <option selected>Open this select menu</option>
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>
    <div class="form-check mb-4">
        <input class="form-check-input" type="radio" asp-for="SelectedCourse" value="JavaScript" checked>
        <label class="form-check-label" >
            JavaScript
        </label>
    </div>
    <div class="form-check mb-4">
        <input class="form-check-input" type="radio" asp-for="SelectedCourse" value="ASP.NET Core Api">
        <label class="form-check-label">
            ASP.NET Core Api
        </label>
    </div>
    <div class="form-check mb-4">
        <input class="form-check-input" type="radio" asp-for="SelectedCourse" value="Java Spring Boot">
        <label class="form-check-label" >
            Java Spring Boot
        </label>
    </div>
    <div class="form-check mb-4">
        <input class="form-check-input" type="radio" asp-for="SelectedCourse" value="Pyton">
        <label class="form-check-label" >
            Pyton
        </label>
    </div>

    <button class="btn btn-success" type="submit" >Apply</button>
    <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>


</form>